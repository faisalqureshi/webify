#!/bin/bash

if [ "$WEBIFY_PYTHON" ]
then
    echo "---------------------------------------------------------------"
    echo "Using Python specified by WEBIFY_PYTHON environment variable"
    echo $WEBIFY_PYTHON
    echo "---------------------------------------------------------------"
    echo 
    exec "$WEBIFY_PYTHON" "$0.py" "$@"
else
    echo "---------------------------------------------------------------"
    echo "Using default python"
    echo "---------------------------------------------------------------"
    echo 
    exec python "$0.py" "$@"
fi
